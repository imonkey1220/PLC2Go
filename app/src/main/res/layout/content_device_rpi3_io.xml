<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="tw.imonkey.plc2go.DeviceRPI3IOActivity"
    tools:showIn="@layout/activity_device_rpi3_io">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="X00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewX00"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textAlignment="center"
                android:textColor="@color/authui_inputTextColorDark" />

            <Switch
                android:text="Y00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/switchY00"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="24sp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="X01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewX01"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textAlignment="center"
                android:textColor="@color/authui_inputTextColorDark" />

            <Switch
                android:text="Y01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/switchY01"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textAlignment="center" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="X02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewX02"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textAlignment="center"
                android:textColor="@color/authui_inputTextColorDark" />

            <Switch
                android:text="Y02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/switchY02"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textAlignment="center" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="X03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewX03"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textAlignment="center"
                android:textColor="@color/authui_inputTextColorDark" />

            <Switch
                android:text="Y03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/switchY03"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textAlignment="center" />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="X04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewX04"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textAlignment="center"
                android:textColor="@color/authui_inputTextColorDark" />

            <Switch
                android:text="Y04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/switchY04"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="24sp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="X05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewX05"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textAlignment="center"
                android:textColor="@color/authui_inputTextColorDark" />

            <Switch
                android:text="Y05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/switchY05"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textAlignment="center" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="X06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewX06"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textAlignment="center"
                android:textColor="@color/authui_inputTextColorDark" />

            <Switch
                android:text="Y06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/switchY06"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textAlignment="center" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="X07"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textViewX07"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textAlignment="center"
                android:textColor="@color/authui_inputTextColorDark" />

            <Switch
                android:text="Y07"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/switchY07"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            android:layout_weight="0.28">

            <EditText
                android:ems="15"
                android:id="@+id/editTextTalk"
                android:hint="Message.............."
                android:textSize="24sp"
                android:textColor="@color/colorPrimary"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="0.9" />

            <Button
                android:layout_height="match_parent"
                android:id="@+id/buttonSendMessage"
                android:onClick="buttonSendMessageOnClick"
                android:background="@android:drawable/ic_menu_send"
                android:elevation="2dp"
                android:backgroundTint="@android:color/holo_orange_light"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_weight="0.1" />
        </LinearLayout>

        <ListView
            android:id="@+id/listViewDevice"
            android:layout_width="match_parent"
            android:layout_weight="1.50"
            android:layout_height="40dp">
        </ListView>



    </LinearLayout>

</android.support.constraint.ConstraintLayout>
